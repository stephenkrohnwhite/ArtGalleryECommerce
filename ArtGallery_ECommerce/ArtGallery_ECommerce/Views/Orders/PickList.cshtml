@model IEnumerable<ArtGallery_ECommerce.Models.Order>

@{
    ViewBag.Title = "PickList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PickList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderTime)
        </th>
        <th>
            Name
        </th>
        <th>
            Order Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>

        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTime)
            </td>
            <td>
                @(item.Buyer.FirstName + " " + item.Buyer.LastName)
            </td>
            <td>
                @item.OrderStatus.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @if (User.IsInRole("Employee"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId })
                }
                @Html.ActionLink("Details", "Details", new { id = item.OrderId })
            </td>
            <td>
                @****EDIT ACTION/CONTROLLER PATH***@
                @Html.ActionLink("SHIP ORDER", "Create", "Shipments", null, new { @class = "btn btn-primary btn-lg" })
            </td>
        </tr>
    }

</table>
