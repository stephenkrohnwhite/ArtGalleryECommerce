
@{
    ViewBag.Title = "Index";

}

<h2>Index</h2>
@if (ViewBag.Message != null)
{
    <div class="container">
        <div class="col-md-12">
            <div>@ViewBag.Message</div>
        </div>

    </div>
}

<form action="Checkout/Charge" method="POST">
    <article>
        <label>Amount: $@ViewBag.CashTotal</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key="pk_test_19AURg22luvozWqAuOChS8uC"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount=@ViewBag.StripeTotal>
    </script>
</form>